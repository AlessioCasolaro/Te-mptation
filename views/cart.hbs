<div class="container mt-150">
  <div class="card shopping-cart">
    <div class="card-header bg-dark text-light">
      <i class="fa fa-shopping-cart mr-20 oro" aria-hidden="true"></i> Il tuo carrello
    </div>
    <div class="card-body">
      {{# if products}}
      {{# each products}}
      <!-- PRODUCT -->
      <div class="row">
        <div class="col-12 col-sm-12 col-md-2 text-center">
          <img class="img-responsive" src="{{this.item.imagePath}}" alt="prewiew" width="150" height="150">
        </div>
        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
          <h4 class="product-name"><strong>{{this.item.title}}</strong></h4>
          <h4>
            <small>{{this.item.description}}</small>
          </h4>
        </div>
        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
          <div class="col-3 col-sm-3 col-md-12 text-md-right" style="padding-top: 5px">
            <h6><strong>{{this.price}} €<span class="text-muted"> x </span></strong></h6><p>Quantità: {{this.qty}}</p>
             <div class="quantity">
            <button type="button" class="btn btn-outline-danger btn-xs mt-20">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </div>
          </div>
         
        </div>
      </div>
      <hr>
      <!-- END PRODUCT -->
      {{/each}}
      {{else}}
      <p>Non ci sono elementi</p>
      {{/if}}

    </div>
    <div class="card-footer">

      <div class="pull-right" style="margin: 10px">
        <a href="/checkout" class="btn pull-right white bg-oro">Checkout</a>
        <div class="pull-right mr-50">
          Total price: <b>{{totalPrice}}</b>
        </div>
      </div>
    </div>
  </div>
</div>