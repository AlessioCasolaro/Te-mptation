<style>
  #header{
    display: none;
  }
</style>
<div class="container">
    <div class="row px-3">
      <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
        <div class="img-left-reg d-none d-md-flex"></div>

        <div class="card-body">
          <h4 class="title text-center mt-4">
            Registrati
          </h4>
          {{#if hasErrors}}
          <div class="alert alert-danger">
            {{# each messages}}
              <p>{{this}}</p>
            {{/each}}
          </div>
        {{/if}}
          <form class="form-box px-3" method="post">
            <div class="form-input">
              <span><i class="fa fa-user"></i></span>
              <input type="text" name="username" id="username"autocomplete="off" placeholder="Il tuo username..." tabindex="10" value="" required>
            </div>

            <div class="form-input">
              <span><i class="fa fa-user"></i></span>
              <input type="text" name="nome" id="nome" placeholder="Il tuo nome..." tabindex="10" value="" required>
            </div>

            <div class="form-input">
              <span><i class="fa fa-user"></i></span>
              <input type="text" name="surname" id="surname"placeholder="Il tuo cognome..." tabindex="10" value="" required>
            </div>

            <div class="form-input">
              <span><i class="fa fa-birthday-cake"></i></span>
              <input type="number" name="age" id="age"placeholder="I tuoi anni..." tabindex="10" value="" required>
            </div>

            <div class="form-input">
              <span><i class="fa fa-envelope-o"></i></span>
              <input type="email" name="email" id="email"placeholder="Il tuo email..." tabindex="10" value="" required>
            </div>

            <div class="form-input">
              <span><i class="fa fa-key"></i></span>
              <input type="password" name="password" id="password"autocomplete="off" placeholder="La tua password..." value="" required>
            </div>

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <div class="mb-3">
              <button type="submit" class="btn btn-block text-uppercase">Registrati</button>
            </div>
            <hr class="my-4">
          </form>

          <div class="text-center mb-2">
            Hai gi√† un account?
            <a href="/signin" class="register-link">
              Accedi
            </a>
          </div>
        </div>
      </div>
    </div>
    <link rel="stylesheet" type="text/css" href="/css/login.css">
  </div>